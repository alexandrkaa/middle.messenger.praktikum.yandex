{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": ["eslint:recommended", "plugin:@typescript-eslint/recommended"],
  "overrides": [],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": ["@typescript-eslint"],
  "rules": {
    "no-useless-escape": 0,
    "no-unused-vars": "off",
    "max-len": [1, 100],
    "quotes": [2, "backtick", { "avoidEscape": true }],
    "no-plusplus": "off",
    "no-underscore-dangle": "off",
    "no-self-compare": "off"
  }
}
