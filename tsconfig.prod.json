{
  "compilerOptions": {
    "declaration": false,
    "sourceMap": true,
    "target": "es2019",
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "dist",
    "module": "commonjs",
    "strictNullChecks": true,
    "esModuleInterop": true,
    "paths": {
      "handlebars": ["./node_modules/handlebars/types/index"]
    },
    "types": ["node", "mocha"]
  },
  "exclude": ["node_modules", "src/test", "test"]
}
